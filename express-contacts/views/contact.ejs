<div class="container mt-2">
    <div class="row">
        <div class="col-md-8">
            <h4 class="lead">Contact Lists</h4>
            <a href="/contact/add" class="btn btn-sm btn-primary">Add New Contact</a>
            <% if (msg.length !== 0) { %>
            <div class="alert alet-success" role="alert">
                <%= msg %>
            </div>
            <% } %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Fullname</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (contacts.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Contact not found
                                </div>
                            </td>
                        </tr>
                        <% } %>
                        <% contacts.forEach((contact, index) => { %>
                        <tr>
                            <td><%= index+1 %> </td>
                            <td><%= contact.name %> </td>
                            <td><%= contact.email %> </td>
                            <td><%= contact.nohp %> </td>
                            <td>
                                <a href="/contact/<%= contact.name %> " class="btn btn-sm btn-success"><i
                                        class="bi bi-info-circle"></i> Detail</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>